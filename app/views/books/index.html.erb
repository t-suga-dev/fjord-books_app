<p id="notice"><%= notice %></p>

<h1><%= t ('index.books') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('index.title') %></th>
      <th><%= t('index.memo') %></th>
      <th><%= t('index.author') %></th>
      <th><%= t('index.picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('button.show'), book %></td>
        <td><%= link_to t('button.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('button.destroy'), book, method: :delete, data: { confirm: t('button.destroy_message') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('button.new_book'), new_book_path %>
